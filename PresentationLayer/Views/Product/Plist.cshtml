@model PresentationLayer.Models.Product
<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css">
<script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
@{
    ViewBag.Title = "Plist";
}


<h2>Plist</h2>
<table id="table_id" class="display">
    <thead>
        <tr>
            <th>ProdctId</th>
            <th>ProductName</th>
            <th>CategoryName</th>
            <th>Image</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table_id').dataTable(
            {
                "coloums": [
                    { "data": "ProductId", "autoWidth": true },
                    { "data": "ProductName", "autoWidth": true },
                    { "data": "CategoryName", "autoWidth": true },

                    { "data": "Image", "autoWidth": true },
                    { "data": "Description", "autoWidth": true }

                ],
                $.ajax({
                    url: '/Product/LoadData',
                    type:'GET',
                    datatype: 'json'

                    
 
            }


    });

</script>


